
<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <div class="portfolio-show-image-box">
        <%= image_tag @portfolio_item.main_image.url%>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group portfolio-links">
          <% if @portfolio_item.youtube_url? %>
            <a target="_blank" href="<%= @portfolio_item.youtube_url %>"><button type="button" class="btn btn btn-outline-primary portfolio-link">View Youtube Demo</button></a>
          <% end %>
          <a target="_blank" href="<%= @portfolio_item.url_link %>"><button type="button" class="btn btn btn-outline-primary portfolio-link">View Live Site</button></a>
          <% if @portfolio_item.source_url? %>
            <a target="_blank" href="<%= @portfolio_item.source_url %>"><button type="button" class="btn btn btn-outline-info portfolio-link">View Source Code</button></a>
          <% end %>
        </div>
        
      </div>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title%></h1>
      
      <hr>
      
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body%></p>
      
      <hr>
      
      <h3>Technologies Used</h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin)%>
        <div class="">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
          <%= link_to "Delete Portfolio", portfolio_path(@portfolio_item), method: :delete, data: { confirm: "Are you sure?"} %>
        </div>
      <% end %>

    </div>
  </div>
</div>





