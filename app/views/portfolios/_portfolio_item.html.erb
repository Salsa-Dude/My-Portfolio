
<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <div class="portfolio-image-box">
      <%= image_tag portfolio_item.thumb_image.to_s if !portfolio_item.thumb_image.nil? %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View Source Code</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">View Demo</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>

